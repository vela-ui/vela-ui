{
  "name": "@vela-ui/react",
  "version": "2.0.24",
  "description": "Vela UI React components",
  "keywords": [
    "vela-ui",
    "typescript",
    "react-components",
    "components",
    "react",
    "react-aria",
    "react-aria-components",
    "tailwindcss",
    "shadcn"
  ],
  "homepage": "https://velaui.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vela-ui/vela-ui.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src --dts",
